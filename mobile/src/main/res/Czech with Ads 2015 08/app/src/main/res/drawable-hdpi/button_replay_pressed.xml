<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="5px"
        android:left="5px"
        android:right="5px"
        android:top="5px">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="#404040"
                android:centerColor="#303030"
                android:endColor="#404040" />

            <corners
                android:radius="5dp"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <stroke
                android:width="0dp"
                android:color="#e5e5e5" />
        </shape>
    </item>

</layer-list>