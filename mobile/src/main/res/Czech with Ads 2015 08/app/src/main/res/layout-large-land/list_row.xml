<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow"
        android:contentDescription="@string/selected_item"
        android:paddingLeft="4dp"
        android:scaleType="center" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/replayButton"
        android:background="#707070" />

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/text_left_margin"
        android:paddingRight="48dp"
        android:paddingTop="12dp"
        android:text="@string/todo"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_medium" />

    <ImageButton
        android:id="@+id/replayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_button_replay"
        android:contentDescription="@string/replaybutton"
        android:focusable="false"
        android:onClick="onReplayButtonClick"
        android:padding="8dp"
        android:src="@drawable/ic_volumetest" />

</RelativeLayout>